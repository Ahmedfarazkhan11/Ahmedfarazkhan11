<script>
    document.addEventListener('DOMContentLoaded', function() {
        const roomImages = document.querySelectorAll('.room');
        const wall = document.getElementById('wall');
        const paintingContainer = document.getElementById('painting-container');
        const paintings = document.querySelectorAll('.painting');
        const uploadWallInput = document.getElementById('upload-wall');
        const resizeHandle = document.getElementById('resize-handle');
        const prevButton = document.querySelector('.carousel-control.prev');
        const nextButton = document.querySelector('.carousel-control.next');
        const paintingsContainer = document.querySelector('.paintings');
        let isDragging = false;
        let isResizing = false;
        let initialX, initialY, startX, startY, initialWidth, initialHeight;

        function startDragging(event) {
            isDragging = true;
            paintingContainer.style.cursor = 'grabbing';
            initialX = paintingContainer.offsetLeft;
            initialY = paintingContainer.offsetTop;
            startX = event.clientX || event.touches[0].clientX;
            startY = event.clientY || event.touches[0].clientY;
        }

        function startResizing(event) {
            isResizing = true;
            startX = event.clientX || event.touches[0].clientX;
            startY = event.clientY || event.touches[0].clientY;
            initialWidth = paintingContainer.offsetWidth;
            initialHeight = paintingContainer.offsetHeight;
        }

        function dragging(event) {
            if (!isDragging) return;
            const clientX = event.clientX || event.touches[0].clientX;
            const clientY = event.clientY || event.touches[0].clientY;
            const dx = clientX - startX;
            const dy = clientY - startY;
            paintingContainer.style.left = initialX + dx + 'px';
            paintingContainer.style.top = initialY + dy + 'px';
        }

        function resizing(event) {
            if (!isResizing) return;
            const clientX = event.clientX || event.touches[0].clientX;
            const clientY = event.clientY || event.touches[0].clientY;
            const dx = clientX - startX;
            const dy = clientY - startY;
            paintingContainer.style.width = initialWidth + dx + 'px';
            paintingContainer.style.height = initialHeight + dy + 'px';
        }

        function stopDragResize() {
            isDragging = false;
            isResizing = false;
            paintingContainer.style.cursor = 'grab';
        }

        roomImages.forEach(room => {
            room.addEventListener('click', () => {
                wall.style.backgroundImage = url(${room.src});
            });
        });

        paintings.forEach(painting => {
            painting.addEventListener('click', () => {
                paintingContainer.style.backgroundImage = url(${painting.src});
            });
        });

        uploadWallInput.addEventListener('change', event => {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function(e) {
                wall.style.backgroundImage = url(${e.target.result});
            };
            reader.readAsDataURL(file);
        });

        paintingContainer.addEventListener('mousedown', startDragging);
        paintingContainer.addEventListener('touchstart', startDragging);

        resizeHandle.addEventListener('mousedown', startResizing);
        resizeHandle.addEventListener('touchstart', startResizing);

        document.addEventListener('mousemove', dragging);
        document.addEventListener('touchmove', dragging);
        document.addEventListener('mousemove', resizing);
        document.addEventListener('touchmove', resizing);

        document.addEventListener('mouseup', stopDragResize);
        document.addEventListener('touchend', stopDragResize);

        prevButton.addEventListener('click', function() {
            paintingsContainer.scrollBy({
                left: -200,
                behavior: 'smooth'
            });
        });

        nextButton.addEventListener('click', function() {
            paintingsContainer.scrollBy({
                left: 200,
                behavior: 'smooth'
            });
        });
    });
</script>
